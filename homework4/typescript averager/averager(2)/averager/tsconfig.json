{
    // Typescript configuration file: provides options the the Typescript
    // compiler (tsc) and makes VSCode recognize this folder as a TS project
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "jsx": "react",
        "strict": true,
        "alwaysStrict": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}